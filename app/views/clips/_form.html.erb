<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css" />
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>

<script>
  $(function() {
    $( "#clip_song" ).autocomplete({
      source: '<%= video_results_clips_path %>'
    });
  });
</script>

<%= form_for(@clip) do |f| %>
  <% if @clip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clip.errors.count, "error") %> prohibited this clip from being saved:</h2>

      <ul>
      <% @clip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="clip-title">
    <%= f.label :title, "Clip title: " %>
    <%= f.text_field :title %>
  </div>

  <div id="unique-url">
    <%= f.label :unique_url, "Create your unique url:" %>
    <span id="url"><%= "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %></span>
    <%= f.text_field :unique_url %>
  </div>

  <div id="photo" >
    <%= f.label :photo, "Upload your photo here: " %>
    <%= f.file_field :photo %>
  </div>

  <div id="song-select">
    <%= f.label :song, "Choose song:" %>
    <%= f.text_field :song %>
  </div>

  <div id="clip-description">
    <%= f.label :body, "Clip description: " %>
    <%= f.text_field :body, rows: 30, cols: 10 %>
  </div>

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
