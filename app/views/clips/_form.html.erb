<%= form_for(@clip) do |f| %>
  <% if @clip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@clip.errors.count, "error") %> prohibited this clip from being saved:</h2>

      <ul>
      <% @clip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="clip-title">
    <%= f.label :title, "Clip title: " %>
    <%= f.text_field :title %>
  </div>

  <div id="unique-url">
    <%= f.label :unique_url, "Create your unique url:" %>
    <span id="url">http://localhost:3000/clips/</span>
    <%= f.text_field :unique_url %>
  </div>

  <div id="photo" >
    <%= f.label :photo, "Upload your photo here: " %>
    <%= f.file_field :photo %>
  </div>

  <!-- TO-Do: add a :song form field & link to YouTube_It -->

  <div id="clip-description">
    <%= f.label :body, "Clip description: " %>
    <%= f.text_field :body %>
  </div>

  <div class="actions">
    <%= f.submit class: "button" %>
  </div>
<% end %>
