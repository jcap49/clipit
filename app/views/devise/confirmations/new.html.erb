<h2>Resend confirmation instructions</h2>

<%= form_for(resource, :as => @user, :url => confirmation_path(@user), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.submit "Resend confirmation instructions", class: "small button" %></div>
<% end %>

<%= render "devise/shared/links" %>
